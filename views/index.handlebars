<div class="container">

    <nav class="navbar">
        <h1 class="Burger-Title">Eat Da Burger</h1>
        <div class="Make-Div">
            <panel>
                <form class="create-form">
                    <div class="form-group">
                        <label for="newburger">New Burger:</label>
                        <input type="text" id="newburger" name="burger">
                        <button type="submit" class="btn btn-success" id="addburger"><span
                                class="fas fa-hamburger"></span></button>
                    </div>
                </form>
            </panel>
        </div>
    </nav>


    <div class="row">
        <!-- Undevoured Burgers -->
        <div class="col-sm-6">
            <div class="panel panel-default Panal-BG">
                <div class="panel-heading" id="lefthead"><strong>New Burgers</strong></div>

                {{#each burgers}}
                {{#unless devoured}}
                <div class="panel-footer">
                    <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                    <button type="button" class="eatburger btn btn-warning" id="eatbutton" data-id="{{this.id}}"
                        data-newDevoured="{{devour}}"><span class="fa fa-cutlery"></span></button>
                </div>
                {{/unless}}
                {{/each}}

            </div>
        </div>
        <!-- Devoured Burgers -->
        <div class="col-sm-6">
            <div class="panel panel-default Panal-BG">
                <div class="panel-heading" id="righthead"><strong>Devoured Burgers</strong></div>

                {{#each burgers}}
                {{#if devoured}}
                <div class="panel-footer">
                    <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                    <button type="button" class="trashburger btn btn-danger" id="trashbutton" data-id="{{this.id}}"
                        data-newDevoured="{{devour}}"><span class="fa fa-trash"></span></button>
                </div>
                {{/if}}
                {{/each}}

            </div>
        </div>
    </div>

</div>